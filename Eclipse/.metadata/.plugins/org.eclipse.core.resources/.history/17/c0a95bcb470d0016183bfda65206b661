import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.Line2D;

import javax.swing.JComponent;

public class Circle extends JComponent{

	private double originX;
	private double originY;
	private double circleX;
	private double circleY;
	
	public Circle(double oX, double oY, double x, double y)
	{
		originX = oX;
		originY = oY;
		circleX = x;
		circleY = y;
		
	}
	public void paintComponent(Graphics g)
	   {  
	      // Recover Graphics2D
	      Graphics2D g2 = (Graphics2D) g;
	      
	      //g2.setColor(new Color((int)(Math.random()*256),(int)(Math.random()*256),(int)(Math.random()*256)));
	      Line2D.Double line = new Line2D.Double(originX, originY, circleX, circleY);
	      g2.draw(line);
	   }
}
