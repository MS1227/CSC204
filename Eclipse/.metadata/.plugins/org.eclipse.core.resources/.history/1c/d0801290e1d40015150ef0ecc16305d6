import java.lang.*;

public class NumberLimits
{
   public static void main (String [] args)
   {
      System.out.println ("The smallest byte is " + Byte.MIN_VALUE
                         + " and the largest byte is " + Byte.MAX_VALUE);
      System.out.println ("The smallest short is " + Short.MIN_VALUE
              + " and the largest short is " + Short.MAX_VALUE);
      System.out.println ("The smallest int is " + Integer.MIN_VALUE
              + " and the largest int is " + Integer.MAX_VALUE);
      System.out.println ("The smallest long is " + Long.MIN_VALUE
              + " and the largest long is " + Long.MAX_VALUE);
      System.out.println ("The smallest float is " + Float.MIN_VALUE
              + " and the largest float is " + Float.MAX_VALUE);
      
   }
}
