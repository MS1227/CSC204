
public class Stringy {
	
private String word;
private String revWord;
private char [] cArray;
private char [] revCArray;
private int stringLength;
Stringy(String a)
{
	word = a;
}
public void revString() {
	
	stringLength = word.length();
	cArray = word.toCharArray();
	for(int r = cArray.length-1, rev = 0; r>0 || rev<cArray.length; r-- ,rev++)
	{
		revCArray[rev] = cArray[r];
	}
	
	System.out.print(word);
	//System.out.print(revCArray);
}
 	
}
