import java.util.Scanner;

/* 
 * Matt Schnider
 * GeoCalc - A program to read in two points and calculate some geometric values
 * Due February 3, 2016
 * 
 */
public class GeoCalc {

	public static void main(String[] args) {
		
		// Print strings of characters with or without a new line at the end
		
		System.out.println("           Matt's Geometric Calculator         ");
		System.out.println("           ***************************         ");
		
		// Read in some numbers
		
		Scanner in = new Scanner(System.in);
		System.out.print("What is the value of the X coordinate for point A: " ); // Reads in X value for point A
		double xA = in.nextDouble();
		
		System.out.print("What is the value of the Y coordinate for point A: " ); // Reads in Y value for point A
		double yA = in.nextDouble();
		
		System.out.print("What is the value of the X coordinate for point B: "); // Reads in X value for point B
		double xB = in.nextDouble();
		
		System.out.print("What is the value of the Y coordinate for point B: "); // Reads in Y value for point B
		double yB = in.nextDouble();
		System.out.println();
		double distance = Math.sqrt((Math.pow((xB-xA), 2))+Math.pow((yB-yA), 2)); // Applies distance formula to inputed values.
		System.out.println("The distance between ("+xA+","+yA+")"+" and ("+xB+","+yB+")"+" is: "+distance); 
		System.out.println();
		System.out.println("The rectangle with coordinates: ");
		System.out.println("("+xA+","+yA+")"+" ("+xA+","+yB+")"+" ("+xB+","+yB+")"+" ("+xB+","+yA+")");
		System.out.println();
		double width = (xB-xA);
		double height = (yB-yA);
		System.out.println("        Has width of:     "+width);
		System.out.println("        Has height of:    "+height);
		System.out.println("        Has perimeter of: "+((2*width)+(2*height)));
		System.out.println("        Has area of:      "+(width*height));
		System.out.println();
		
		System.out.println("The circle with points A and B at the ends of a diameter:");
		System.out.println("        Has its center at: ("+((xB-xA)/2)+","+((yB-yA)/2)+")");
		System.out.println("        Has a radius of:    "+(distance)/2);
		System.out.println("        Has a diameter of:  "+distance);
		System.out.println("        Has circumference:  "+(Math.PI*distance));
		System.out.println("        Has area:           "+(Math.PI*Math.pow(distance/2, 2)));
		
		
		// How to use variables
		
		// How to do math
		
		// Print out our numbers inside other text
		
	
		
	}

}
