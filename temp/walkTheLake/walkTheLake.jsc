@Java
method followShore()
{
   if(isFlower(AHEAD))
   {
      hop();
      pick();
   }
   else if(isWater(AHEAD))
   {
      turn(LEFT);
      followShore();
   }
   else if(isClear(AHEAD))
   {
      hop();
      turn(RIGHT);
      followShore();
   }
}

method noFlower()
{
   while(!hasFlower())
   {
      followShore();
   }
}
